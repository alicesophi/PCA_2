//Faça um Programa que calcule a área de um quadrado, em seguida mostre o dobro desta área para o usuário.
#include <stdio.h>
#include <math.h>

int main(void){
	float lado, area, dobro_area;

	printf("Digite o lado do quadrado: ");
	scanf("%f", &lado);

	area = pow(lado, 2);
    
    dobro_area = area * 2;
    
	printf("O valor da area do quadrado eh: %.1f, entao, o dobro da area eh %.1f", area, dobro_area);

	return 0;

}
