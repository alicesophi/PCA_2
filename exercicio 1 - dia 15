//Faça um Programa que peça dois números e imprima a soma.

#include <stdio.h>

int main(void){
	float numero1, numero2, soma;

	printf("Digite um numero: ");
	scanf("%f", &numero1);

	printf("Digite outro numero: ");
	scanf("%f", &numero2);

	soma = numero1 + numero2;

	printf("A soma dos dois numeros eh %.1f", soma);

	return 0;

}
